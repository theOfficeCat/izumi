OUTPUT_DIRECTORY        = @abs_builddir@/out

INPUT                   = @abs_srcdir@/../src
STRIP_FROM_PATH         = @abs_srcdir@/../src/include
STRIP_FROM_INC_PATH     = @abs_srcdir@/../src/include
RECURSIVE               = YES

PROJECT_NAME            = libizumi
PROJECT_BRIEF           = A library of parsers for pipeline traces
OPTIMIZE_OUTPUT_FOR_C   = YES

JAVADOC_AUTOBRIEF       = YES

FULL_SIDEBAR            = YES
GENERATE_TREEVIEW       = YES
HTML_COLORSTYLE         = DARK

PDF_HYPERLINKS          = YES
USE_PDFLATEX            = YES

GENERATE_MAN            = $(GENERATE_MAN)
GENERATE_RTF            = $(GENERATE_RTF)
GENERATE_XML            = $(GENERATE_XML)
GENERATE_HTMLHELP       = $(GENERATE_HTMLHELP)
GENERATE_CHI            = $(GENERATE_CHI)
GENERATE_HTML           = $(GENERATE_HTML)
GENERATE_LATEX          = $(GENERATE_LATEX)

EXTRACT_ALL             = NO

QUIET                   = YES
WARNINGS                = YES
WARN_IF_UNDOCUMENTED    = YES
WARN_IF_DOC_ERROR       = YES
WARN_NO_PARAMDOC        = YES
WARN_FORMAT             = "$file:$line: $text"
WARN_AS_ERROR           = YES